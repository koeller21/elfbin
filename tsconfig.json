{
  "compilerOptions": {
    "lib": ["ES2016", "dom", "ES2020"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "moduleResolution": "node" /* Use Node's module resolution strategy. */,
    "baseUrl": ".",
    "paths": {
      /* Specify paths for module names (useful for bundling) */
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*" /* include source files */],
  "exclude": [
    "node_modules",
    "dist" /* Exclude node_modules and build directories from the compilation. */
  ]
}
